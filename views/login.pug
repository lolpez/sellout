doctype html
html
    head
        title=title
        link(type='text/css', rel='stylesheet', href='/css/materialize.min.css', media='screen,projection')
        link(type='text/css', rel='stylesheet', href='/css/login.css', media='screen,projection')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
    body
        .login-container
            .row.valign-wrapper(style="height: 100%")
                .col.s12.m4.offset-m4(style="margin-top: -10%")
                    .login-logo
                        img(src="/img/starbucks.png")
                    .login-form
                        .login-title Login de TPV
                        form(action='/', method='post')
                            .input-field
                                input#username.validate(type='text', name='username', value="admin")
                                label(for='username') Usuario
                            .input-field
                                input#password.validate(type='password', name='password', value="password")
                                label(for='password') Contraseña
                            button(type="submit").waves-effect.waves-light.btn.login-button Aceptar
                    .login-subtitle
                        a(href="/") ¿Problemas en el acceso?
                        a(href="www.tpvenlanube.com").login-url www.tpvenlanube.com
        script(src='/js/materialize.min.js')
