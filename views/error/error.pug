doctype html
html
	head
		title=title
		link(type='text/css', rel='stylesheet', href='/css/materialize.min.css', media='screen,projection')
		link(type='text/css', rel='stylesheet', href='/css/login.css', media='screen,projection')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
	style.
		body {
			min-height: 100%;
			background: linear-gradient(to bottom, rgb(255, 85, 85), rgb(0, 0, 0));
		}
		.row .col{
			padding: 0;
		}
	body
		.login-container(style="position: unset")
			.row.valign-wrapper(style="height: 100%")
				.col.s12.m4.offset-m4
					.login-form
						.login-title Ops! Algo malo acaba de pasar!
						h1(style="word-wrap: break-word")=`${(error.status) ? error.status : ""} ${message}`
						if error.stack
							div(style="max-height: 70vh; overflow-x: scroll")
								pre #{error.stack}
						a(href="/") Volver
		script(src='/js/materialize.min.js')
