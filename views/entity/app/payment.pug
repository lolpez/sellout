#payment-app-modal.modal.modal-fixed-footer
	.modal-content
		.row
			h4 Pagar
			.col.s12.m6
				-var selected = true;
				h5 Empleado
				select#employee-modal-select
					each employee in employees
						option(value=JSON.stringify({id:employee.idEmpleado, nombreEmpleado:employee.nombreEmpleado}), selected=selected)=employee.nombreEmpleado
						-selected = false
				.row
					.col.s12(style="height: 30vh; overflow: auto")
						h5 Detalle de compra
						table.highlight#payment-app-modal-table
							thead
								tr
									th Empleado
									th Item
									th Tipo
									th Cantidad
									th Precio Unitario
									th Precio Total
							tbody
					.col.s12
						h5 Formas de pago
						.row
							each paymentMethod in paymentMethods
								.col.s12.m3
									span.waves-effect.waves-light.btn.app-button(data-id=paymentMethod.idtipoPago, title=paymentMethod.nomtipoPago)=paymentMethod.nomtipoPago
			.col.s12.m6
				.row
					.col.s12
						h5 Cliente
						h6=user.name
					.col.s12
						h5 Tipos de decuentos
						button Tipos de descuentos
	.modal-footer
		a.modal-close.waves-effect.waves-green.btn-flat(href='#!') Salir
		a.modal-close.waves-effect.waves-green.btn-flat(href='#!') Aceptar
