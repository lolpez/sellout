#payment-app-modal.modal.modal-fixed-footer
	.modal-content
		.row.modal-row
			.col.s12.m12
				h3 Pago de ticket
		.row.modal-row
			.col.s12.m8
				h5 Nombre del cliente
				h6#payment-modal-customer
			.col.s12.m4
				.row.modal-row
					.col.s12.m6
						button.waves-effect.waves-light.btn.app-button.block Historial
					.col.s12.m6
						button.waves-effect.waves-light.btn.app-button.block Ficha del cliente
		.row.modal-row
			.col.s12
				h5 Detalle de compra
				div(style="height: 30vh; overflow: auto")
					table.highlight#payment-app-modal-table
						thead
							tr
								th Empleado
								th Item
								th Tipo
								th Cantidad
								th Precio Unitario
								th Precio Total
						tbody
				.row(style="margin-bottom: 0;")
					.col.s12.m4
						h5 Formas de pago
						.row(style="height: 21vh; overflow-y: auto")
							each paymentMethod in paymentMethods
								.col.s12.m3
									span.waves-effect.waves-light.btn.app-button.payment-method(data-id=paymentMethod.idtipoPago, title=paymentMethod.nomtipoPago)=paymentMethod.nomtipoPago
					.col.s12.m4
						ul.collection.payment-collection
							li.collection-item
								button.waves-effect.waves-light.btn.app-button Descuento
								span.secondary-content
							li.collection-item
								span DTO. CLIENTE
								span.secondary-content
							li.collection-item
								span REC. EQ. (RE)
								span.secondary-content
							li.collection-item
								span TOTAL
								span.secondary-content
									| BS. 
									span#payment-modal-total
							li.collection-item
								span Recibido BS. 0
								span.secondary-content
									| Pendiente BS. 
									span#payment-modal-pendent
					.col.s12.m4
						button.waves-effect.waves-light.btn.app-button.block.green Ticket + Ticket Regalo
						button#payment-modal-pay.waves-effect.waves-light.btn.app-button.block.green Pagar
	.modal-footer
		a.modal-close.waves-effect.waves-red.btn-flat(href='#!') Cancelar
