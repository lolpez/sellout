#payment-app-modal.modal.modal-fixed-footer
	.modal-content
		.row
			h4 Pagar
			.col.s12.m4
				-var selected = true;
				label Empleado
				select#employee-modal-select
					each employee in employees
						option(value=JSON.stringify({id:employee.idEmpleado, nombreEmpleado:employee.nombreEmpleado}), selected=selected)=employee.nombreEmpleado
						-selected = false
				.row
					.col.s12(style="height: 30vh; overflow: auto")
						h6 Detalle de compra
						table.highlight#payment-app-modal-table
							thead
								tr
									th Empleado
									th Item
									th Tipo
									th Cantidad
									th Precio Unitario
									th Precio Total
							tbody
					.col.s12
						h6 Formas de pago
			.col.s12.m8
				
	.modal-footer
		a.modal-close.waves-effect.waves-green.btn-flat(href='#!') Agree
